{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "jsx": "preserve",
    "moduleResolution": "node",
    "lib": ["dom", "es5", "scripthost", "es2015"],
    "baseUrl": "./",
    "plugins": [
      {
        "name": "ts-graphql-plugin",
        "schema": "./src/schema.graphql",
        "tag": "gql"
      }
    ],
    "paths": {
      "talk-client/*": [
        "./src/client/*"
      ],
      "talk-server/*": [
        "./src/server/*"
      ],
      "*": [
        "./vendor/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.d.ts",
    "./test/**/*.ts",
    "./test/**/*.tsx"
  ]
}
