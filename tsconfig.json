{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noErrorTruncation": true,
    "outDir": "dist",
    "lib": ["dom", "es7", "scripthost", "es2015", "esnext.asynciterable"],
    "baseUrl": "./",
    "paths": {
      "talk-server/*": [
        "./src/core/server/*"
      ]
    }
  },
  "include": [
    "./scripts/**/*.ts",
    "./scripts/**/*.js",
    "./configs/**/*.js",
    "./configs/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.d.ts",
    "./test/**/*.js",
    "./test/**/*.ts",
    "./test/**/*.tsx"
  ],
  "exclude": [
    "node_modules/subscriptions-transport-ws",
    "./src/core/client",
    "./src/types/**/*.ts",
    "./src/types/**/*.tsx"
  ]
}
