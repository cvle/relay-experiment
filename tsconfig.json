{
  "compilerOptions": {
    "target": "es2015",
    "module": "esNext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "lib": ["dom", "es7", "scripthost", "es2015"],
    "baseUrl": "./",
    "plugins": [
      {
        "name": "ts-graphql-plugin",
        "schema": "./src/schema.graphql",
        "tag": "gql"
      }
    ],
    "paths": {
      "talk-admin/*": [
        "./src/client/admin/*"
      ],
      "talk-stream/*": [
        "./src/client/stream/*"
      ],
      "talk-framework/*": [
        "./src/client/framework/*"
      ],
      "talk-ui/*": [
        "./src/client/ui/*"
      ],
      "talk-server/*": [
        "./src/server/*"
      ],
      "talk-locales/*": [
        "./src/locales/*"
      ],
      "*": [
        "./vendor/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.d.ts",
    "./test/**/*.ts",
    "./test/**/*.tsx"
  ]
}
