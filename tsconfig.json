{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "lib": ["dom", "es7", "scripthost", "es2015"],
    "baseUrl": "./",
    "paths": {
      "talk-admin/*": [
        "./src/core/client/admin/*"
      ],
      "talk-stream/*": [
        "./src/core/client/stream/*"
      ],
      "talk-framework/*": [
        "./src/core/client/framework/*"
      ],
      "talk-ui/*": [
        "./src/core/client/ui/*"
      ],
      "talk-server/*": [
        "./src/core/server/*"
      ],
      "talk-locales/*": [
        "./src/locales/*"
      ],
      "*": [
        "./node_modules/@coral-forks/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.d.ts",
    "./test/**/*.ts",
    "./test/**/*.tsx"
  ]
}
