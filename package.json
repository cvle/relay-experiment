{
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.49",
    "@babel/polyfill": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "@babel/preset-react": "^7.0.0-beta.49",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/node": "^10.3.1",
    "@types/react-relay": "^1.3.6",
    "apollo-server": "^2.0.0-beta.4",
    "apollo-server-express": "^2.0.0-beta.3",
    "autoprefixer": "^8.6.0",
    "babel-loader": "^8.0.0-beta",
    "babel-preset-react-optimize": "^1.0.1",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "postcss-loader": "^2.1.5",
    "precss": "^3.1.2",
    "prettier": "^1.13.4",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "relay-compiler-language-typescript": "^0.9.0",
    "style-loader": "^0.21.0",
    "ts-loader": "^4.3.1",
    "ts-node": "^6.1.0",
    "tsconfig-paths-webpack-plugin": "^3.1.4",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.9.1",
    "typescript-formatter": "^7.2.2",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.11.0",
    "webpack-cli": "^3.0.2",
    "webpack-dev-server": "^3.1.4"
  },
  "workspaces": [
    "vendor/*"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "compile:relay": "NODE_PATH=./vendor ./vendor/relay-compiler/bin/relay-compiler --src ./src/client --schema src/schema.graphql --language typescript --artifactDirectory ./src/client/__generated__ --no-watchman",
    "start": "NODE_ENV=production ts-node -O '{\"module\":\"commonjs\"}' src/server/serve.ts",
    "start:development": "NODE_ENV=development ts-node -O '{\"module\":\"commonjs\"}' src/server/serve.ts",
    "watch": "npm-run-all clean --parallel watch:*",
    "watch:client": "NODE_ENV=development webpack --progress --watch",
    "watch:relay": "nodemon --config .nodemon.relay.json",
    "watch:server": "nodemon --config .nodemon.server.json"
  }
}
