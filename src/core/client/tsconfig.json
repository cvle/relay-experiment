{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "jsx": "react",
    "noEmit": true,
    "strictNullChecks": false,
    "lib": ["dom", "es7", "scripthost", "es2015", "esnext.asynciterable"],
    "baseUrl": "./",
    "paths": {
      "talk-admin/*": [
        "./admin/*"
      ],
      "talk-stream/*": [
        "./stream/*"
      ],
      "talk-framework/*": [
        "./framework/*"
      ],
      "talk-ui/*": [
        "./ui/*"
      ],
      "talk-locales/*": [
        "../../locales/*"
      ],
      "*": [
        "../../../node_modules/@coral-forks/*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.d.ts",
    "../../types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
